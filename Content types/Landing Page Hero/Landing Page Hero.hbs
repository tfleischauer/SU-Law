<section class="hero hero--landing text-margin-reset hero--img{{#ifSet element="BG Video URL"}} hero--video{{/ifSet}}">
  <div class="hero__media">
    {{#ifSet element="BG Video URL"}}
      <div class="autoplay-video-container">
        <video class="video" aria-labelledby="hero-video--button-toggle" id="hero" loop muted playsinline>
          <source src="{{publish element="BG Video URL"}}" type="video/mp4" />
        </video>
        <button
          type="button"
          class="video-play-button"
          data-button-open-text=""
          data-button-close-text=""
          data-button-enable-at="0"
          data-button-disable-at="-1"
          data-button-open-class="video-playing"
          data-button-open-class-element=".autoplay-video-container"
          aria-live="polite"
          aria-label="Pause"
          id="hero-video--button-toggle"
          aria-controls="hero"
          data-toggle-type="toggle"
          aria-pressed="false">
        </button>
      </div>
    {{/ifSet}}

     {{!-- PXL conflict with meta images --}}
     {{!-- <img
        class="hero__img"
        loading="eager"
        decoding="async"
        fetchpriority="high"
        sizes="100vw"
        src="{{publish element='BG Image' output='normal' formatter='V10/image/pxl-crop' cdn='true' pxl-filter-id='4'}}"
        srcset="
          {{publish element='BG Image' output='normal' formatter='V10/image/pxl-crop' cdn='true' pxl-filter-id='4'}} 500w,
          {{publish element='BG Image' output='normal' formatter='V10/image/pxl-crop' cdn='true' pxl-filter-id='3'}} 768w,
          {{publish element='BG Image' output='normal' formatter='V10/image/pxl-crop' cdn='true' pxl-filter-id='2'}} 1600w,
          {{publish element='BG Image' output='normal' formatter='V10/image/pxl-crop' cdn='true' pxl-filter-id='1'}} 1900w"
        alt="{{publish element='BG Image' formatter='text/alt'}}">  --}}
    
    {{!-- Background image: publish returns a full <img>, so render unescaped --}}
    {{{publish element='BG Image'}}}

  </div>

  <div class="hero__overlay" aria-hidden="true"></div>

  <div class="hero__content">
    <h1>{{publish element='Heading' modifiers='striptags,htmlentities'}}</h1>

    {{#ifSet element="Description"}}
      <div class="global-spacing--3x">
        <p>{{publish element="Description"}}</p>
      </div>
    {{/ifSet}}

    {{#ifSet element="Show Breadcrumbs"}}
      <div class="global-spacing--3x"> 
        <nav aria-label="Breadcrumbs">
          {{nav id="955" name="Breadcrumbs"}} 
        </nav>
      </div> 
    {{/ifSet}}

    {{#ifSet element="CTA - Title"}}
      {{#or (ifSet element="CTA - Internal Link") (ifSet element="CTA - External Link")}}
      <div class="global-spacing--3x hero__cta">
        {{#ifSet element="CTA - Internal Link"}}
        <div class="hero__cta--internal">
          {{{publish element='CTA - Internal Link' modifiers='nav_sections'}}}
        </div>
        <script>(function(){
          var a=document.querySelector('.hero__cta--internal a');
          if(a) a.classList.add('btn');
        })();</script>
        {{else}}
          <a class="btn" href="{{publish element='CTA - External Link'}}">
            {{publish element='CTA - Title'}}
          </a>
        {{/ifSet}}
      </div>
      {{/or}}
    {{/ifSet}}

  </div>
</section>
